{
  "openapi": "3.0.3",
  "info": {
    "title": "Verschnitt Optimierung",
    "description": "Service that nests ProductionParts into RowPart",
    "termsOfService": "http://BeschreibungDerOptimierung.com/terms/",
    "contact": {
      "name": "Vinzenz Geyer",
      "url": "https://www.hundegger.com",
      "email": "v.geyer@hundegger.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/optimization/job/{id}": {
      "get": {
        "tags": [
          "optimization"
        ],
        "description": "Get a optimizationjob by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id that needs to be fetched.",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OptimizationJob"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/OptimizationJob"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Id": {
        "type": "string",
        "format": "uuid"
      },
      "State": {
        "type": "string",
        "enum": [
          "created",
          "processing",
          "done"
        ]
      },
      "OptimizationJob": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "state": {
            "$ref": "#/components/schemas/State"
          },
          "parts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OptimizationPart"
            }
          }
        }
      },
      "OptimizationPart": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "length": {
            "type": "integer",
            "format": "int64"
          },
          "width": {
            "type": "integer",
            "format": "int64"
          },
          "height": {
            "type": "integer",
            "format": "int64"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  }
}