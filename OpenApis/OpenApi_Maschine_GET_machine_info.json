{
  "openapi": "3.0.2",
  "info": {
    "title": "Maschine",
    "description": "Service that executes the actual processings.",
    "termsOfService": "http://BeschreibungDerMaschine.com/terms/",
    "contact": {
      "name": "Vinzenz Geyer",
      "url": "https://www.hundegger.com",
      "email": "v.geyer@hundegger.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/machine/info": {
      "get": {
        "tags": [
          "machine"
        ],
        "description": "Get information about the machine.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MachineInfo"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/MachineInfo"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MachineInfo": {
        "type": "object",
        "properties": {
          "machineType": {
            "type": "string",
            "enum": [
              "panel",
              "beam",
              "compound"
            ]
          },
          "configuration": {
            "type": "object",
            "properties": {
              "saw": {
                "type": "boolean"
              },
              "miller": {
                "type": "boolean"
              },
              "driller": {
                "type": "boolean"
              },
              "brush": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  }
}