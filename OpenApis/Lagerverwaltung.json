{
  "openapi": "3.0.2",
  "info": {
    "title": "Lagerverwaltung",
    "description": "Service that does the stock management.",
    "termsOfService": "http://BeschreibungDerLagerverwaltung.com/terms/",
    "contact": {
      "name": "Vinzenz Geyer",
      "url": "https://www.hundegger.com",
      "email": "v.geyer@hundegger.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/stock/reservation": {
      "post": {
        "tags": [
          "stock"
        ],
        "description": "add a reservation",
        "requestBody": {
          "description": "reservation to add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Material"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              }
            }
          },
          "405": {
            "description": "Invalid Input -> the reservation is not created"
          },
          "500": {
            "description": "Internal Server Error -> the reservation is not created"
          }
        }
      }
    },
    "/stock/reservation/{id}/state": {
      "put": {
        "tags": [
          "stock"
        ],
        "description": "change state of a reservation",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The Reservation that will be manipulated.",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReservationState"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "reservation state changed"
          },
          "405": {
            "description": "Invalid Input -> the reservation state has not changed"
          },
          "500": {
            "description": "Internal Server Error -> the reservation state has not changed"
          }
        }
      }
    },
    "/stock/availableMaterial": {
      "get": {
        "tags": [
          "stock"
        ],
        "description": "get the stock",
        "responses": {
          "200": {
            "description": "available material",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AvailableMaterial"
                }
              }
            }
          },
          "405": {
            "description": "Invalid Input -> the reservation is not created"
          },
          "500": {
            "description": "Internal Server Error -> the reservation is not created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Id": {
        "type": "string",
        "format": "uuid"
      },
      "ReservationState": {
        "type": "object",
        "properties": {
          "State": {
            "type": "string",
            "enum": [
              "reservationActive",
              "materialConsumed",
              "reservationLapsed"
            ]
          }
        }
      },
      "Material": {
        "type": "object",
        "properties": {
          "RawPartType": {
            "$ref": "#/components/schemas/RawPartType"
          },
          "Count": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "Profile": {
        "type": "object",
        "properties": {
          "Height": {
            "type": "integer",
            "format": "int64"
          },
          "Width": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "RawPartType": {
        "type": "object",
        "properties": {
          "profile": {
            "$ref": "#/components/schemas/Profile"
          },
          "Length": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "AvailableMaterial": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Material"
        }
      }
    }
  }
}