{
  "openapi": "3.0.2",
  "info": {
    "title": "ProductionControlService",
    "description": "Service for controling production",
    "termsOfService": "http://BeschreibungDesLeitsystem.com/terms/",
    "contact": {
      "name": "Vinzenz Geyer",
      "url": "https://www.hundegger.com",
      "email": "v.geyer@hundegger.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/production/job": {
      "post": {
        "tags": [
          "production"
        ],
        "description": "Add a new productionjob",
        "requestBody": {
          "description": "Productionjob object that needs to be added",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductionJob"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/ProductionJob"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              }
            }
          },
          "405": {
            "description": "Invalid input -> the job is not created"
          },
          "500": {
            "description": "Internal Server Error -> the job is not created"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Id": {
        "type": "string",
        "format": "uuid"
      },
      "ProductionJob": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "parts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductionPart"
            }
          }
        }
      },
      "ProductionPart": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "length": {
            "type": "integer",
            "format": "int64"
          },
          "width": {
            "type": "integer",
            "format": "int64"
          },
          "height": {
            "type": "integer",
            "format": "int64"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  }
}