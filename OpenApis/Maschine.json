{
  "openapi": "3.0.2",
  "info": {
    "title": "Maschine",
    "description": "Service that executes the actual processings.",
    "termsOfService": "http://BeschreibungDerMaschine.com/terms/",
    "contact": {
      "name": "Vinzenz Geyer",
      "url": "https://www.hundegger.com",
      "email": "v.geyer@hundegger.com"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/machine/nesting/{id}": {
      "get": {
        "tags": [
          "machine"
        ],
        "description": "Get the state of nesting by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id that needs to be fetched.",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NestingPart"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/NestingPart"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/machine/nesting": {
      "get": {
        "tags": [
          "machine"
        ],
        "description": "Get all id of all nestings.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Id"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "machine"
        ],
        "description": "create a nesting",
        "requestBody": {
          "description": "desired state of nesting",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NestingPart"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/NestingPart"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              }
            }
          },
          "405": {
            "description": "Invalid Input -> the nesting is not created"
          },
          "500": {
            "description": "Internal Server Error -> the nesting is not created"
          }
        }
      }
    },
    "/machine/nesting/{id}/state": {
      "get": {
        "tags": [
          "machine"
        ],
        "description": "Get the state of nesting by id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id that needs to be fetched.",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/State"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/State"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": [
          "machine"
        ],
        "description": "Set the state of nesting.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The id of the nesting that needs to be set.",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "requestBody": {
          "description": "desired state of nesting",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/State"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/State"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/State"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/State"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "405": {
            "description": "Invalid Input -> nesting was not changed"
          },
          "500": {
            "description": "Internal Server Error -> nesting was not changed"
          }
        }
      }
    },
    "/machine/info": {
      "get": {
        "tags": [
          "machine"
        ],
        "description": "Get information about the machine.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MachineInfo"
                }
              },
              "application/xml": {
                "schema": {
                  "$ref": "#/components/schemas/MachineInfo"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Id": {
        "type": "string",
        "format": "uuid"
      },
      "State": {
        "type": "string",
        "enum": [
          "inizialized",
          "waiting",
          "processing",
          "cancel",
          "error",
          "succeded"
        ]
      },
      "NestingPart": {
        "type": "object",
        "properties": {
          "id": {
            "$ref": "#/components/schemas/Id"
          },
          "rowPartId": {
            "$ref": "#/components/schemas/Id"
          },
          "state": {
            "$ref": "#/components/schemas/State"
          },
          "length": {
            "type": "integer",
            "format": "int64"
          },
          "width": {
            "type": "integer",
            "format": "int64"
          },
          "height": {
            "type": "integer",
            "format": "int64"
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "MachineInfo": {
        "type": "object",
        "properties": {
          "maschinetype": {
            "type": "string",
            "enum": [
              "panel",
              "beam"
            ]
          },
          "configuration": {
            "type": "object",
            "properties": {
              "saw": {
                "type": "boolean"
              },
              "miller": {
                "type": "boolean"
              },
              "driller": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  }
}